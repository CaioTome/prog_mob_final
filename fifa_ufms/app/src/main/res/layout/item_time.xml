<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingHorizontal="20dp"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/bg_item_jogador"
    android:gravity="center_vertical">

    <!-- Ícone -->
    <ImageView
        android:id="@+id/image_jogador_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:contentDescription="@string/jogador_icon_desc"
        android:src="@drawable/team_icon" />

    <!-- Dados do jogador -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cor: "
                android:textSize="12sp" />
            <TextView
                android:id="@+id/text_team_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cor" />
        </LinearLayout>


    </LinearLayout>

    <!-- Botão editar -->
    <ImageButton
        android:id="@+id/button_edit_jogador"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_edit"
        android:contentDescription="@string/edit_jogador_desc" />
</LinearLayout>
